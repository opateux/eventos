generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Evento {
  id            String    @id @default(uuid())
  nome          String
  data          DateTime
  local         String
  descricao     String
  ingressos     Ingresso[]

  @@map("eventos")
}

model CategoriaIngresso {
  id            String    @id @default(uuid())
  nome          String    @unique
  descricao     String
  ingressos     Ingresso[]

  @@map("categorias_ingresso")
}

model LoteIngresso {
  id            String    @id @default(uuid())
  nome          String
  descricao     String
  quantidade    Int
  valor         Float
  ingressos     Ingresso[]

  @@map("lotes_ingresso")
}

model Ingresso {
  id            String           @id @default(uuid())
  quantidade    Int
  valor         Float
  evento        Evento           @relation(fields: [eventoId], references: [id])
  eventoId      String
  categoria     CategoriaIngresso @relation(fields: [categoriaId], references: [id])
  categoriaId   String
  lote          LoteIngresso      @relation(fields: [loteId], references: [id])
  loteId        String
  cliente       Cliente?          @relation(fields: [clienteId], references: [id])
  clienteId     String?

  @@map("ingressos")
}

model Cliente {
  id            String    @id @default(uuid())
  nome          String
  email         String    @unique
  ingressos     Ingresso[]

  @@map("clientes")
}
